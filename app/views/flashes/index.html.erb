<h1>Listing flashes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Query</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flashes.each do |flash| %>
  <tr>
    <td><%= flash.name %></td>
    <td><%= flash.age %></td>
    <td><%= flash.query %></td>
    <td><%= link_to 'Show', flash %></td>
    <td><%= link_to 'Edit', edit_flash_path(flash) %></td>
    <td><%= link_to 'Destroy', flash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

